# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (Vite dev server)
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Key (optional - alternative to JWT)
API_KEY=your-api-key-here

# MongoDB Configuration
# Local MongoDB:
# MONGODB_URI=mongodb://localhost:27017/chat-support

# MongoDB Atlas (cloud) - Replace with your connection string:
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/chat-support?retryWrites=true&w=majority
MONGODB_DB=chat-support

# Development fallback (use in-memory storage if MongoDB unavailable)
# Set to false when using MongoDB Atlas
ALLOW_MEMORY_FALLBACK=false

# Logging
LOG_LEVEL=info
